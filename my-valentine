  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: linear-gradient(to right, #ff9a9e, #fad0c4);
      text-align: center;
      padding: 40px;
    }

    .card {
      background: white;
      padding: 30px;
      border-radius: 15px;
      max-width: 450px;
      margin: auto;
      box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

    h1 {
      color: #ff4d6d;
    }

    button {
      width: 100%;
      padding: 12px;
      margin: 8px 0;
      font-size: 16px;
      border-radius: 8px;
      border: none;
      cursor: pointer;
      background: #ffccd5;
    }

    button:hover {
      background: #ffb3c1;
    }

    #response {
      margin-top: 15px;
      font-size: 18px;
      font-weight: bold;
      min-height: 40px;
    }

    #nextBtn {
      display: none;
      margin-top: 15px;
      background: #ff4d6d;
      color: white;
    }
  </style>
